@model webappd.Models.Spices

@{
    ViewBag.Title = "Product Details";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product</title>
    <link rel="stylesheet" href="~/Content/DRY_FRUITS_CHOCOLATES.CSS">
</head>
<body>
    <header>
        <div class="center-content">
            <a href="@Url.Action("Index", "Home")">
                <img src="~/Content/ganeshdevops.jpeg-removebg-preview.png" height="200px" width="250px" alt="Top Image">
            </a>
        </div>
    </header>
    <div class="center-content">
        <div class="grid-item">
            <div class="top-center">
                <h1 class="text1">@Model.ImageName</h1>
                <img src="@Model.ImagePath" height="200px" width="250px" alt="Product Image">
            </div>
            <div class="dropdown">
                <h1 style="text-align: center;">Price: Rs.@Model.Price/-</h1>
                <p style="font-size: 20px;" align="center" class="text">
                    <b>BENEFITS:</b>
                    <br>@Model.Description
                </p>
                <form action="/Address/AddressInput" method="get">
                    <input type="hidden" name="amount" value="@Model.Price" />
                    <button type="submit">Buy Now</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
