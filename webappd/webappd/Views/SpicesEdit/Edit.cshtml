@model webappd.Models.Spices

@{
    ViewBag.Title = "Edit Spice";
    Layout = null; // Optional: Use if you don't have a layout page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Spice</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Adjust CSS as needed -->
    <style>
        .form-group {
            margin-bottom: 20px;
        }

        .image-preview {
            max-width: 300px;
            max-height: 300px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Edit Spice</h2>
        @using (Html.BeginForm("Edit", "SpicesEdit", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.ImageFile, htmlAttributes: new { @class = "control-label" })
                <input type="file" name="ImageFile" id="ImageFile" class="form-control-file" accept="image/*">
                @Html.ValidationMessageFor(model => model.ImageFile, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="control-label">Current Image:</label>
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Url.Content(Model.ImagePath)" class="image-preview" />
                }
                else
                {
                    <p>No image available</p>
                }
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ImageName, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.ImageName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ImageName, "", new { @class = "text-danger" })
            </div>

            @Html.HiddenFor(model => model.ImagePath) <!-- Keep existing image path -->

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</body>
</html>
