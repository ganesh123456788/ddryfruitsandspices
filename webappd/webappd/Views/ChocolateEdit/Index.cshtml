@model List<webappd.Models.Chocolate>

@{
    ViewBag.Title = "All Chocolates";
    Layout = null;  // This removes the default layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/DRY_FRUITS_CHOCOLATES.CSS">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            background-image: url('@Url.Content("~/Content/pexels-photo-1939485.png")');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100%;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }
        .top-right {
            position: absolute;
            top: 10px;
            right: 10px;
        }
        .profile-icon {
            position: relative;
            display: inline-block;
        }
        .profile-dropdown {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }
        .profile-dropdown a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }
        .profile-dropdown a:hover {
            background-color: #f1f1f1;
        }
        .profile-icon:hover .profile-dropdown {
            display: block;
        }
        .center-content {
            text-align: center;
            margin-top: 50px;
        }
        .top-center {
            text-align: center;
            margin-top: 20px;
        }
        .top-center img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 0 auto;
        }
        .action-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
            gap: 10px;
        }
        .stock button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
        }
        .grid-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-top: 20px;
        }
        .grid-item {
            text-align: center;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0); /* Transparent background */
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .grid-item img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
        }
        .table-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }
        .table {
            width: 80%;  /* Adjust width as needed */
            border-collapse: collapse;
            margin: 0 auto;
            text-align: center; /* Center-align table text */
        }
        .table th, .table td {
            padding: 10px;
            text-align: center;
            border: 1px solid black; /* Set border color and style */
        }
        .chocolate-image {
            max-width: 150px; /* Adjust max width as needed */
            height: auto;
        }
        .btn {
            background-color: #007bff; /* Bootstrap primary color */
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
        }
        .btn-primary {
            background-color: #007bff;
        }
        .btn-danger {
            background-color: #dc3545;
        }
        .btn-group {
            display: flex;
            gap: 10px;
        }
    </style>
</head>
<body>
    <header>
        <div class="center-content">
            <a href="@Url.Action("Index", "Home")">
                <img src="~/Content/ganeshdevops.jpeg-removebg-preview.png" height="200px" width="250px" alt="Top Image">
            </a>
            <button onclick="location.href='@Url.Action("Create", "AllChocolate")'">Add</button>
            <div class="top-right">
                <div class="profile-icon">
                    <i class="fas fa-user-circle fa-2x"></i>
                    <div class="profile-dropdown">
                        <a href="@Url.Action("Profile", "Home")">PROFILE</a>
                        <a href="@Url.Action("Index", "Home")">HOME</a>
                        <a href="@Url.Action("Settings", "Home")">SETTINGS</a>
                        <a href="@Url.Action("SignOut", "Home")">SIGN OUT</a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container text-center">
        <h2>All Chocolates</h2>

        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var chocolate in Model)
                    {
                        <tr>
                            <td>@chocolate.ImageName</td>
                            <td>
                                <img src="@Url.Content(chocolate.ImagePath)" alt="@chocolate.ImageName" class="chocolate-image" />
                            </td>
                            <td>@chocolate.Description</td>
                            <td>@chocolate.Price</td>
                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("Edit", "Edit", new { imageName = chocolate.ImageName })" class="btn btn-primary">Edit</a>
                                    @using (Html.BeginForm("Delete", "ChocolateEdit", new { imageName = chocolate.ImageName }, FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this chocolate?');" }))
                                    {
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Chocolates found.</p>
        }
    </div>
</body>
</html>
