@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Products</title>
    <link rel="stylesheet" href="~/Content/DRY_FRUITS_CHOCOLATES.CSS">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            background-image: url('@Url.Content("~/Content/pexels-photo-1939485.png")');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .header-container {
            text-align: center;
            margin-top: 50px; /* Adjust margin top as needed */
        }

        .action-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            margin: 20px auto; /* Center align the container */
            max-width: 1200px; /* Adjust the width as needed */
        }

        .stock {
            display: flex;
            gap: 10px;
        }

        .stock button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
        }

        .profile-icon {
            position: relative;
            display: inline-block;
        }

        .profile-dropdown {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            right: 0;
        }

        .profile-dropdown a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .profile-dropdown a:hover {
            background-color: #f1f1f1;
        }

        .profile-icon:hover .profile-dropdown {
            display: block;
        }

        .center-content {
            text-align: center;
            margin-top: 50px; /* Adjust margin top as needed */
        }

        .grid-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr); /* 3 columns with equal width */
            gap: 20px; /* Adjust gap between grid items */
            margin-top: 20px; /* Adjust top margin as needed */
        }

        .grid-item {
            text-align: center;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0); /* Transparent background */
            border: 1px solid #ddd; /* Optional: border around each grid item */
            border-radius: 5px; /* Optional: rounded corners for grid items */
        }

        .grid-item img {
            width: 100%; /* Ensure images are responsive */
            height: 200px; /* Set a fixed height */
            object-fit: cover; /* Ensure the image covers the area without stretching */
            border-radius: 5px; /* Optional: rounded corners for images */
        }
    </style>
</head>
<body>
    <header>
        <div class="header-container">
            <a href="@Url.Action("Index", "Home")">
                <img src="~/Content/ganeshdevops.jpeg-removebg-preview.png" height="150px" width="400px" alt="Dry Fruits and Spices">
            </a>
        </div>
    </header>

    <div class="action-container">
        <div class="stock">
            <button onclick="window.location.href='@Url.Action("Index", "InDetailed")'">STOCK</button>
            <button onclick="window.location.href='@Url.Action("OrderList", "Home")'">ORDER LIST</button>
        </div>
        <div class="top-left">
            <div class="profile-icon">
                <i class="fas fa-user-circle fa-2x"></i>
                <div class="profile-dropdown">
                    <a href="@Url.Action("Profile", "Home")">PROFILE</a>
                    <a href="@Url.Action("Index", "Home")">HOME</a>
                    <a href="@Url.Action("Settings", "Home")">SETTINGS</a>
                    <a href="@Url.Action("SignOut", "Home")">SIGN OUT</a>
                </div>
            </div>
        </div>
    </div>

    <div class="center-content">
        <div class="grid-container">
            <div class="grid-item">
                <a href="@Url.Action("Index", "DryFruitsDisplay")">
                    <img src="~/Content/PngItem_1286885.png" alt="Dry Fruits">
                    <h2>DRY FRUITS</h2>
                </a>
            </div>
            <div class="grid-item">
                <a href="@Url.Action("Index", "SpiceDisplay")">
                    <img src="~/Content/herbs_and_spices_hd_food.jpg" alt="Spices">
                    <h2>SPICES</h2>
                </a>
            </div>
            <div class="grid-item">
                <a href="@Url.Action("Index", "ChocolateDisplay")">
                    <img src="~/Content/chocolates.png" alt="Dry Fruits Chocolates">
                    <h2>DRY FRUITS <br> CHOCOLATES</h2>
                </a>
            </div>
        </div>
    </div>
</body>
</html>
